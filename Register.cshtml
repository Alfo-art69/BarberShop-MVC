@model RegisterViewModel

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div id="logo-container" class="text-center">
            <img class="mx-auto h-12 w-auto" src="~/images/logo.png" alt="BarberShop">
            <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
                Crea il tuo account
            </h2>
        </div>

        <form id="registerForm" class="mt-8 space-y-6" asp-action="Register" method="post">
            <div class="rounded-md shadow-sm -space-y-px">
                <div>
                    <label for="email" class="sr-only">Email</label>
                    <input id="email" asp-for="Email" type="email" autocomplete="email" required
                           class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                           placeholder="Email">
                    <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
                </div>
                <div>
                    <label for="password" class="sr-only">Password</label>
                    <input id="password" asp-for="Password" type="password" autocomplete="new-password" required
                           class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                           placeholder="Password">
                    <span asp-validation-for="Password" class="text-red-500 text-xs"></span>
                </div>
                <div>
                    <label for="confirmPassword" class="sr-only">Conferma Password</label>
                    <input id="confirmPassword" asp-for="ConfirmPassword" type="password" autocomplete="new-password" required
                           class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                           placeholder="Conferma Password">
                    <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs"></span>
                </div>
            </div>

            <div>
                <button type="submit" id="registerButton"
                        class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Registrati
                </button>
            </div>
        </form>

        <div class="text-center">
            <a asp-action="Login" class="font-medium text-indigo-600 hover:text-indigo-500">
                Hai già un account? Accedi
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Animazione con Framer Motion
        document.addEventListener('DOMContentLoaded', function() {
            // Animazione del logo
            const logo = document.getElementById('logo-container');
            logo.style.opacity = '0';
            logo.style.transform = 'translateY(-20px)';

            setTimeout(() => {
                logo.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                logo.style.opacity = '1';
                logo.style.transform = 'translateY(0)';
            }, 100);

            // Animazione del form
            const form = document.getElementById('registerForm');
            form.style.opacity = '0';
            form.style.transform = 'scale(0.95)';

            setTimeout(() => {
                form.style.transition = 'opacity 0.5s ease 0.2s, transform 0.5s ease 0.2s';
                form.style.opacity = '1';
                form.style.transform = 'scale(1)';
            }, 300);

            // Effetto hover sul pulsante
            const button = document.getElementById('registerButton');
            button.addEventListener('mouseenter', () => {
                button.style.transform = 'scale(1.02)';
                button.style.transition = 'transform 0.2s ease';
            });

            button.addEventListener('mouseleave', () => {
                button.style.transform = 'scale(1)';
            });
        });
    </script>
}